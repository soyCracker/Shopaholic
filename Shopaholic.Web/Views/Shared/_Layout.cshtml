            <img class="animation__shake" src="~/dist/img/Shopaholic-logo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav id="LayoutTopBarTool" class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
