    <!-- Vue.js Ajax(axios) -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!-- vue-easy-lightbox -->
    <script src="https://unpkg.com/vue-easy-lightbox@vue2/dist/vue-easy-lightbox.umd.min.js"></script>
