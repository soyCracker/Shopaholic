    <script src="~/js/ExceptUtil.js" ></script>
    <script src="~/js/PageUtil.js" ></script>

    <script>
        var baseurl = window.location.origin;        
        var provider = new firebase.auth.GoogleAuthProvider();

        // 登入狀態變換
        firebase.auth().onAuthStateChanged(function (user) {
            if (user) {
                // User is signed in.
                LoginTool.isLogin = true;
                localStorage.setItem('isSignIn', '1');
            }
            else
            {
                LoginTool.isLogin = false;
                localStorage.removeItem('isSignIn'); 
            }
        }); 

        var LayoutApp = new Vue({
            el: '#LayoutApp',
            data:
            {
                getCategoryListApi: baseurl + "/Home/api/GetCategoryList",
                categoryList: {},
            },
            mounted: function()
            {
                var self = this;  
                self.InitUI();
            },
            methods:
            {
                InitUI: function () {
                    var self = this;              

                    //ToastUtil.InfoFire('處理中')

                    axios.post(self.getCategoryListApi)
                        .then(function (result) {
                            if(result.data.Success)
                            {
                                self.categoryList = result.data.Data;                  
                            }
                            else
                            {
                                ToastUtil.ErrorAlert('Success:' + result.data.Success + '\n' +
                                        'Msg:' + result.data.Msg)
                            }                           
                        })
                        .catch(function (error) {
                            ExceptUtil.PostExceptionFuc(error);
                        });
                }                   
            }
        });

        var LoginTool = new Vue({
            el: '#LoginTool',
            data:
            {
                isLogin: false, 
            },
            methods:
            {
                Logout: function () {
                    var self = this;
                    ToastUtil.InfoFire('登出中...');
                    firebase.auth().signOut().then(function ()
                    {     
                        // Sign-out successful.                                                       
                    }).catch(function (error) {
                        // An error happened.
                    });
                }
            },
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
