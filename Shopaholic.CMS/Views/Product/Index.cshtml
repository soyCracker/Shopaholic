@section Scripts{
    <script>

        var FormTool = new Vue({
            el: '#FormTool',
            data:
            {
                getPagesApi: baseurl + "/Product/api/GetProductPages",
                deleteApi: baseurl + "/Product/api/Delete",
                productSearchApi: baseurl + "/Product/api/Search",
                pages: 1,
                productList: {},
                categoryName: '',       
                list: [
                  { Id: '123456789', Name: '選項 1' },
                  { Id: '234567890', Name: '選項 2' },
                  { Id: '345678901', Name: '選項 3' },
                ],
            },
            mounted: function()
            {
                var self = this;
                self.GetPages();
                self.SelectPage(1);
            },
            methods:
            {

                SelectPage: function (page) {
                    var self = this;

                    var obj = {
                        ['Page']: page
                    };

                    axios.post(self.productSearchApi, obj)
                        .then(function (result) {
                            if(result.data.Success)
                            {
                                self.productList = result.data.Data;
                                console.log(result.data.Data);
                                console.log(self.productList);
                            }
                            else
                            {
                                ToastUtil.ErrorAlert('Success:' + result.data.Success + '\n' +
                                        'Msg:' + result.data.Msg)
                            }                           
                        })
                        .catch(function (error) {
                            if( error.response ){
                                console.log(error.response.data); // => the response payload 
                                ToastUtil.ErrorAlert('Success:' + error.response.data.Success + '\n' +
                                        'Msg:' + error.response.data.Msg)
                            }
                            else{
                                ToastUtil.ErrorAlert('post error')
                            }
                        });
                },

                GetPages: function () {
                    var self = this;
                    console.log("12346")
                    axios.post(self.getPagesApi)
                        .then(function (result) {
                            if(result.data.Success)
                            {
                                console.log("Success")
                                self.pages = result.data.Data;
                            }
                            else
                            {
                                ToastUtil.ErrorAlert('Success:' + result.data.Success + '\n' +
                                        'Msg:' + result.data.Msg)
                            }                           
                        })
                        .catch(function (error) {
                            if( error.response ){
                                console.log(error.response.data); // => the response payload 
                                ToastUtil.ErrorAlert('Success:' + error.response.data.Success + '\n' +
                                        'Msg:' + error.response.data.Msg)
                            }
                            else{
                                ToastUtil.ErrorAlert('post error')
                            }
                        });
                },

                DeleteProduct: function (id) {
                    var self = this;
                    if(confirm("確定刪除?")) {
                        var obj = {
                            ['Id']: id
                        };
                        self.PostContent(obj, deleteApi);
                    }
                },

                PostContent: function (obj, url) {
                    var self = this;
                    console.log(url + ' post');
                    axios.post(url, obj)
                        .then(function (result) {
                            console.log(result);
                            console.log('Success:' + result.data.Success);
                            console.log('Msg:' + result.data.Msg);
                            console.log('Data:');
                            console.log(result.data.data);
                            if(result.data.Success)
                            {
                                location.href = '@Url.Action("Index")';
                            }                         
                        })
                        .catch(function (error) {                                    
                            if( error.response ){
                                console.log(error.response.data); // => the response payload 
                                alert('Success:' + error.response.data.Success + '\n' +
                                        'Msg:' + error.response.data.Msg);
                            }
                            else{
                                alert('post error'); 
                            }
                        });
                },
            }
        });
    </script>
}