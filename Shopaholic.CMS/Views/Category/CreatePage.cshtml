@{
    ViewData["Title"] = "新增類別";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">新增類別</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div id="FormTool" class="container-fluid">
        <div class="row">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">新增類別</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="card-body">
                    <validation-observer ref="validObserver" v-slot="{ valid }">
                        <validation-provider rules="required" v-slot="{ errors }">
                            <div class="form-group">
                                <label>類別名稱</label>
                                <input class="form-control" placeholder="輸入類別" v-model="categoryName" v-on:keydown.enter="SubmitBtn">
                                <span>{{ errors[0] }}</span>
                            </div>
                            <a v-on:click="SubmitBtn" class="btn btn-primary">Submit</a>
                        </validation-provider>
                    </validation-observer>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

<script src="~/js/Category/CreatePage.js"></script>