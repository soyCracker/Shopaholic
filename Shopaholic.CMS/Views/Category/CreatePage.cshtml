
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">新增類別</h1>
            </div><!-- /.col -->           
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div id="FormTool" class="container-fluid">
        <div class="row">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                <h3 class="card-title">新增類別</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->                
                    <div class="card-body">
                        <validation-observer ref="validObserver" v-slot="{ valid }" >
                            <validation-provider rules="required" v-slot="{ errors }">
                                <div class="form-group">
                                    <label >類別名稱</label>
                                    <input class="form-control" placeholder="輸入類別" v-model="categoryName">
                                    <span>{{ errors[0] }}</span>
                                </div>   
                                <a v-on:click="SubmitBtn" v-on:keydown.enter="SubmitBtn" class="btn btn-primary">Submit</a>
                            </validation-provider>
                        </validation-observer>                                   
                    </div>
                    <!-- /.card-body -->                                  
            </div>
            <!-- /.card -->
        </div>
    <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

@section Scripts{

    <script>
        
        Vue.component('validation-provider', VeeValidate.ValidationProvider);
        Vue.component('validation-observer', VeeValidate.ValidationObserver);

        //SweetAlert2
        var Toast = Swal.mixin({
          toast: true,
          position: 'top-end',
          showConfirmButton: false,
          timer: 3000
        });

        var FormTool = new Vue({
            el: '#FormTool',
            data:
            {
                categoryName: '',
                createApi: baseurl + "/Category/api/Add",
            },
            mounted: function(){
             
            },
            methods:
            {                             
                SubmitBtn: async function () {
                    var self = this;
                    console.log('submitBtn click');
                    //click觸發驗證
                    var isValid = await self.$refs.validObserver.validate();
                    if(isValid)
                    {
                        self.ToastFire('處理中')
                        self.PostContent(self.GetPostObj());
                    }
                    else{
                        self.ToastFire('validate error')
                        console.log('validate error');
                    }
                },

                GetPostObj: function () {
                    var self = this;

                    var obj = {
                        ['Name']: self.categoryName
                    };

                    return obj;
                },

                PostContent: function (obj) {
                    var self = this;
                    var url = self.createApi;
                    console.log(url + ' post');
                    axios.post(url, obj)
                        .then(function (result) {
                            console.log('Success:' + result.data.success);
                            console.log('Msg:' + result.data.msg);
                            console.log('Data:');
                            console.log(result.data.data);
                            if(result.data.Success)
                            {
                                location.href = '@Url.Action("Index")';
                            }
                            else
                            {
                                alert('Success:' + result.data.Success + '\n' +
                                        'Msg:' + result.data.Msg);
                            }                           
                        })
                        .catch(function (error) {
                            if( error.response ){
                                console.log(error.response.data); // => the response payload 
                                alert('Success:' + error.response.data.Success + '\n' +
                                        'Msg:' + error.response.data.Msg);
                            }
                            else{
                                alert('post error'); 
                            }
                        });
                },

                ToastFire: function (info) {
                    Toast.fire({
                        icon: 'info',
                        title: '&nbsp;' + info
                    });
                }
                
            }
        });
    </script>

}