@using Shopaholic.CMS.Model.ViewModels
@using System.Collections.Generic

@model List<CategoryVM>

@{
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">類別列表</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"> 
                      <a asp-controller="Category" asp-action="CreatePage" class="btn btn-primary btn-sm">
                         <i class="fas fa-folder">
                         </i>
                         新增           
                      </a>
                  </li>
                </ol>
              </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Default box -->
<div class="card">
<div class="card-header">
    <h3 class="card-title">類別</h3>    
</div>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 20%">
                    #
                </th>
                <th style="width: 40%">
                    類別名稱
                </th>               
                <th style="width: 40%">
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var categoryVM in Model)
                {
                    <tr>
                        <td>
                            @categoryVM.Id
                        </td>
                        <td>
                            <a>
                                @categoryVM.Name
                            </a>                            
                        </td>                                                
                        <td class="project-actions text-right">                            
                            <a class="btn btn-info btn-sm" href="#">
                                <i class="fas fa-pencil-alt">
                                </i>
                                修改
                            </a>
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                刪除
                            </a>
                        </td>
                    </tr>
                }
            }
                        
        </tbody>
    </table>
</div>
<!-- /.card-body -->
</div>
<!-- /.card -->